<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Created_by_TA.line_follower.Start_activity" >

    <ImageButton
        android:id="@+id/Bsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Bexit"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/settings" />

    <ImageView
        android:id="@+id/LOGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/crlogo" />

    <ImageButton
        android:id="@+id/Bstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Bstart"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/Bsettings"
        android:background="@null"
        android:src="@drawable/start" />

    <ImageButton
        android:id="@+id/Bexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Bstart"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/Bsettings"
        android:background="@null"
        android:src="@drawable/exit" />

</RelativeLayout>